<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_rv_main_shop_item"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_avatar_shop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="6dp"
        android:src="@drawable/avatar_main_shop_default"/>

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/iv_avatar_shop"
        android:text="@string/tv_item_shop_name_default"
        android:textSize="13sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_shop_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tv_shop_name"
        android:layout_alignLeft="@+id/tv_shop_name"
        android:text="@string/tv_item_shop_intro_default"
        android:textSize="11sp"
        android:textColor="#757575"/>

    <Button
        android:id="@+id/btn_shop_open"
        android:layout_width="43dp"
        android:layout_height="25dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_btn_shop_open"
        android:textColor="@android:color/white"
        android:text="@string/btn_item_shop_look"
        android:textSize="13sp"/>
</RelativeLayout>