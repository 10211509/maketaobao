<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_sub_type_item"
    android:layout_width="match_parent"
    android:layout_height="30dp">

    <TextView
        android:id="@+id/tv_sub_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_centerVertical="true"
        android:text="@string/tv_item_sub_type_apple"
        android:textColor="@android:color/black"
        app:layout_textSizePercent="40%h"/>

    <ImageView
        android:id="@+id/iv_sub_type_choose"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_rv_sub_type_choose"/>

</com.zhy.android.percent.support.PercentRelativeLayout>